{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules"]
}
